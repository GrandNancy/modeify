#!/bin/sh

cd "$(dirname "$0")"/..

BUCKET=`./bin/config-val $1 s3_bucket`

echo "Building client..."
./bin/build-client $1

echo "Syncing assets to $BUCKET"
aws s3 sync assets $BUCKET \
  --acl public-read \
  --exclude "*.css" \
  --exclude "*.js" \

aws s3 sync assets $BUCKET \
  --acl public-read \
  --content-encoding "gzip" \
  --exclude "*" \
  --include "*.css" \
  --include "*.js"
