#!/bin/sh

echo '##### Installing Modeify #####'

cd "$(dirname "$0")"/..

# OS
OS=$(uname)

# Installation for Macs
if [ $OS == "Darwin" ]; then
  echo 'Checking for Homebrew...'
  if [ -z $(command -v brew) ]; then
    echo 'Homebrew must be installed to continue on a Mac. See http://brew.sh/'
    exit 1
  fi

  echo 'Checking for MongoDB...'
  if [ -z $(command -v mongod) ]; then
    echo 'Installing MongoDB...'
    brew install mongodb
    ln -sfv /usr/local/opt/mongodb/*.plist ~/Library/LaunchAgents
    launchctl load ~/Library/LaunchAgents/homebrew.mxcl.mongodb.plist
  fi

  echo 'Checking for Node.js...'
  if [ -z $(command -v node) ]; then
    echo 'Installing nodejs...'
    brew install node
  fi

  echo 'Checking the ulimit...'
  ULIMIT=$(ulimit)
  if [ $ULIMIT != "unlimited" ] && [ $ULIMIT < 4096 ]; then
    echo 'Increasing the ulimit for component(1)...'
    echo 'kern.maxfiles=20480' | sudo tee -a /etc/sysctl.conf
    echo 'limit maxfiles 8192 20480\nlimit maxproc 1000 2000' | sudo tee -a /etc/launchd.conf
    echo 'ulimit -n 4096' | sudo tee -a /etc/profile
  fi
fi

# Make deployment dir
mkdir deployment || true
mkdir assets/images/application || true

# Copy the config files
echo 'Copying the config files...'
cp -n config/about.md.tmp deployment/about.md
cp -n config/config.yaml.tmp deployment/config.yaml
cp -n config/env.tmp deployment/env
cp -n config/messages.yaml.tmp deployment/messages.yaml
cp -n config/terms.md.tmp deployment/terms.md

# Source the .env file
echo 'Sourcing deployment/env file...'
source deployment/env

# Install & build
echo 'Rebuilding node dependcies & building client files...'
make build

# Finish
echo 'Finished! Start the server with `npm start`'
